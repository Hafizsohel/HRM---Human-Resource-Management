<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with a border -->
    <item>
        <shape android:shape="rectangle">
            <!-- Outer border -->
            <stroke
                android:width="2dp"
                android:color="@color/blue" /> <!-- Set your desired border color and width here -->
            <!-- Background color -->
            <solid android:color= "@color/white" /> <!-- Set your desired background color here -->
        </shape>
    </item>
</layer-list>
