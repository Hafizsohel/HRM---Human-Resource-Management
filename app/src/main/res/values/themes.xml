<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HRM_Suffix" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#1566e0</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ToolbarStyle">
        <item name="android:theme">?attr/actionBarTheme</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Fullscreen" parent="Theme.HRM_Suffix">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLayoutInDisplayCutoutMode" tools:ignore="NewApi">shortEdges</item>
    </style>


    <style name="CustomCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custome_corners</item>
    </style>
    <style name="ShapeAppearanceOverlay_card_custome_corners" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">50dp</item>
        <item name="cornerSizeBottomLeft">50dp</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/blue_border_rounded_cornwe</item>
        <item name="android:windowTitleStyle">@style/CustomDialogTitleStyle</item>
    </style>

    <style name="CustomDialogTitleStyle" parent="android:TextAppearance.Material.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>



</resources>